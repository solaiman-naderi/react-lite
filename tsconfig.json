{
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "createElement",
    "jsxFragmentFactory": "Fragment",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["packages/react-core/src/*"],
      "@dom/*": ["packages/react-dom-lite/src/*"],
      "@examples/*": ["examples/*"]
    }
  },
  "include": ["examples", "packages", "public/main.ts"]
}
